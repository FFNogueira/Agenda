<%- include('./includes/header.ejs') %>
    <!-- <body> -->

    <!-- Navbar: -->
    <%- include('./includes/navbar.ejs') %>

        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-2"></div>
                <!-- Cabeçalho da página de login -->
                <div class="col-sm-8">
                    <div class="text-center my-4">
                        <h1 class="font-weight-normal mb-0">Faça login...</h1>
                        <p class="lead">ou crie sua conta abaixo.</p>
                    </div>
                </div>
                <div class="col-sm-2"></div>
            </div>

            <!-- Parte de login & Cadastro: -->
            <div class="row justify-content-center mt-3">
                <!-- Parte de login: -->
                <div class="col-sm-5 col-md-4 border mx-2 py-3 border">
                    <!-- Formulário de login: -->
                    <form method="post" action="/login">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                        <div class="form-group">
                            <label for="E-mail1">E-mail</label>
                            <input type="email" class="form-control" id="E-mail1" name="email">
                        </div>
                        <div class="form-group">
                            <label for="Senha1">Senha</label>
                            <input type="password" class="form-control" id="Senha1" name="senha">
                        </div>
                        <button type="submit" class="btn btn-primary">Logar</button>

                    </form>
                    <!-- Imprime uma mensagem de erro no form de login: -->
                    <% if(typeof loginRegisterError !=='undefined' ){ %>
                        <% if(error===1 ){ %>
                            <%- include('./includes/loginRegisterErrorMessage.ejs') %>
                                <% } %>
                                    <% } %>
                </div>

                <!-- Parte de Cadastro: -->
                <div class="col-sm-5 col-md-4 border border mx-2 py-3">
                    <!-- Formulário de Cadastro: -->
                    <form method="post" action="/register">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                        <div class="form-group">
                            <label for="Usuario">Usuário</label>
                            <input type="text" class="form-control" id="Usuario" name="usuario">
                        </div>
                        <div class="form-group">
                            <label for="E-mail2">E-mail</label>
                            <input type="email" class="form-control" id="E-mail2" name="email">
                        </div>
                        <div class="form-group">
                            <label for="Senha2">Senha</label>
                            <input type="password" class="form-control" id="Senha2" name="senha">
                        </div>
                        <button type="submit" class="btn btn-info">Criar Conta</button>

                    </form>
                    <!-- Imprime uma mensagem de erro no form de Registro: -->
                    <% if(typeof loginRegisterError !=='undefined' ){ %>
                        <% if(error===2 ){ %>
                            <%- include('./includes/loginRegisterErrorMessage.ejs') %>
                                <% } %>
                                    <% } %>
                </div>

            </div>
        </div>

        <% if(typeof loginRegisterError !=='undefined' ){ %>
            <%- include('./includes/mantainLoginRegister.ejs') %>
                <% } %>

                    <!-- </body> -->
                    <%- include('./includes/footer.ejs') %>